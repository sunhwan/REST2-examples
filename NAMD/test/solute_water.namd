# shared simulation options for Hamiltonian-exchange

timestep                2.0

structure               system/solute_water.psf
coordinates             system/solute_water.pdb
outputname              output/solute_water
temperature             0

parameters              toppar/par_all36_carb.prm
parameters              toppar/toppar_water_ions.prm
paraTypeCharmm          on

# PME
PME                     on
PMEGridSpacing          1.0

# Periodic Boundary Conditions
cellBasisVector1     69.0    0.   0.
cellBasisVector2     0.    69.0   0.
cellBasisVector3     0.    0.     69.0
cellOrigin           0.0   0.0   0.0

wrapAll                 on

useGroupPressure     yes
useFlexibleCell      no # allow anisotropic cell fluctuations?
useConstantRatio     no
useConstantArea      no

langevin                on
langevinTemp            300.0
langevinDamping         1.0
LangevinPiston          on
LangevinPistonTarget    1
LangevinPistonPeriod    100
LangevinPistonDecay     100
LangevinPistonTemp      300

switching               on
switchdist              10.0
vdwForceSwitching   yes;               # New option for force-based switching of vdW
cutoff                  14.0
pairlistdist            16.0
stepspercycle           20
margin                  5.0
exclude                 scaled1-4
1-4scaling              1.0

commotion               no

rigidbonds             all 

tclforces on
source print.tcl

run 0
